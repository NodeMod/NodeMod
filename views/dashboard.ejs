<!DOCTYPE html>
<html>
    <head>
        <title>NodeMod - Dashboard</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/e6cce9c8da.js" crossorigin="anonymous"></script>
        <%- include('../public/partials/functions.ejs') -%>
        <link rel="icon" href="https://o.remove.bg/downloads/e8e1b41b-0b9b-4eff-8215-988408a78782/logo_nodemod__1_-removebg-preview.png">
        <style>
            body {
                /*background: linear-gradient(90deg, rgb(0, 0, 0) 0%, rgb(26, 26, 26) 100%) */
                background-color: #141414; 
                font-family: 'Roboto', sans-serif;
                color: white;
            }

            .header {
                border-radius: 10px;
                width: 100%;
                height: 50px;
                text-align: center;
            }

            .headerButton {
                background-color: transparent;
                border-radius: 10px;
                color: white;
                width: 160px;
                height: 50px;
                font-size: 16px;
                border-color: transparent;
                transition: 0.2s;
                font-family: 'Roboto', sans-serif;
                font-weight: 500;
            }

            .headerButton:hover {
                transition: 0.3s;
                background-color: #7289da;
                cursor: pointer;
            }

            .dashboardDivContainer {
                text-align: center;
            }

            .dashboardDiv {
                width: 100%;
                height: 100%;
                text-align: center;
            }

            .title {
                padding-top: 10px;
                text-align: center;
                font-size: 110px;
            }

            .description {
                font-size: 50px;
            }

            .botsDescription {
                font-size: 40px;
            }

            .botsButton {
                background-color: rgb(90, 90, 233);
                border-radius: 10px;
                color: white;
                width: 160px;
                height: 60px;
                font-size: 25px;
                border-color: transparent;
                transition: 0.2s;
                font-family: 'Roboto', sans-serif;
                font-weight: 500;
            }

            .botsButton:hover {
                transition: 0.3s;
                background-color: #7289da;
                cursor: pointer;
            }

            .container {
                padding-top: 50px;
            }

            .background {
                border-radius: 50px;
                background-color: #080808;
                width: 100%;
                height: 336px;
                text-align: center;
            }

            .avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
            }
        </style>
    </head>
    <body>
        <div class="header">
            <button class="headerButton" onclick="openHome()"><i class="fas fa-home"></i> Home</button>
            <button class="headerButton" onclick="logOut()"><i class="fas fa-user-slash"></i> Log Out</button>
        </div>

        <div class="dashboardDivContainer">
            <div class="dashboardDiv">
                <h1 class="title">Dashboard</h2>
                <p class="description">
                    <img class="avatar" src=<%= avatar %>></b>
                    <b class="loggedIn"><%= username %>#<%= discriminator %></b>
                </p>
                <button class="botsButton">New Bot</button>
                <p class="botsDescription">Your Bots</p>
            </div>
        </div>
    </body>
</html>
